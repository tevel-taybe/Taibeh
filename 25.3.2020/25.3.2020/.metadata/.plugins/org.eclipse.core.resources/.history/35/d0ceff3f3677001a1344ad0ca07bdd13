int DumpTelemetry(sat_packet_t *cmd) //TODO: check
{
	if( xSemaphoreTake( xDumpLock, 10 ) == pdTRUE )
	{
		xQueueSendToBack(xDumpQueue, cmd, 0);

		xSemaphoreGive( xDumpLock );
	}

	return 0;
}


